<div class="discourse-users-page">
  <!-- Header con estad√≠sticas -->
  <div class="page-header">
    <div class="page-header-content">
      <h1 class="page-title">üë• Discourse Users</h1>
      <div class="page-header-stats">
        <span class="stat-item">
          <span class="stat-number">{{totalFilteredUsers}}</span>
          <span class="stat-label">users</span>
        </span>
        <span class="stat-item">
          <span class="stat-number">{{totalCountries}}</span>
          <span class="stat-label">countries</span>
        </span>
      </div>
    </div>
    <div class="page-header-actions">
      <button class="btn btn-primary" {{action "loadUsers"}}>
        üîÑ Refresh
      </button>
    </div>
  </div>

  <!-- Filtros -->
  <div class="filters-section">
    <div class="filters-row">
      <div class="filter-group">
        <label class="filter-label">Filter by country:</label>
        <select class="filter-select" {{on "change" (action "selectCountry" value="target.value")}}>
          <option value="all">All countries</option>
          {{#each countries as |country|}}
            <option value="{{country}}" selected={{eq selectedCountry country}}>
              {{country}}
            </option>
          {{/each}}
        </select>
      </div>
      
      <div class="filter-group">
        <label class="filter-label">Search user:</label>
        <input 
          type="text" 
          class="filter-input" 
          placeholder="First name, last name, email or username..."
          value={{searchTerm}}
          {{on "input" (action "updateSearchTerm")}}
        />
      </div>
      
      <div class="filter-group">
        <button class="btn btn-secondary" {{action "clearFilters"}}>
          üóëÔ∏è Clear filters
        </button>
      </div>
    </div>
  </div>

  <!-- Lista de usuarios -->
  <div class="users-content">
    {{#if loading}}
      <div class="loading">
        <div class="loading-spinner">‚è≥</div>
        <p>Loading Discourse users...</p>
      </div>
    {{else if error}}
      <div class="error-message">
        <div class="error-icon">‚ùå</div>
        <h3>Error</h3>
        <p>{{error}}</p>
      </div>
    {{else if filteredUsers}}
      {{#each filteredUsers as |countryUsers country|}}
        <div class="country-section">
          <div class="country-header">
            <h3 class="country-name">
              {{#if (eq country "No country")}}
                üåç No country specified
              {{else}}
                {{country}}
              {{/if}}
            </h3>
            <span class="country-count">{{countryUsers.length}} users</span>
          </div>
          
          <div class="users-grid">
            {{#each countryUsers as |user|}}
              <div class="user-card">
                <div class="user-avatar">
                  {{#if user.avatar_template}}
                    <img src="{{user.avatar_template}}" alt="Avatar" class="avatar-image">
                  {{else}}
                    <div class="avatar-placeholder">{{get-initials user.firstname user.lastname}}</div>
                  {{/if}}
                </div>
                <div class="user-info">
                  <div class="user-name">{{user.firstname}} {{user.lastname}}</div>
                  <div class="user-username">
                    <a href="https://discourse.youth-care.eu/u/{{user.username}}" target="_blank" class="user-link">@{{user.username}}</a>
                  </div>
                  <div class="user-location">Location: {{user.location}}</div>
                  <div class="user-trust-level">Trust level: {{user.trust_level}}</div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="no-results">
        <div class="no-results-icon">üîç</div>
        <h3>No users found</h3>
        <p>Try adjusting the filters or search with different terms.</p>
      </div>
    {{/if}}
  </div>
</div>

